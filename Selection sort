#include <stdio.h>

int main() {
	int n;
	printf("Enter the size of the array:");
	scanf("%d", &n);
    int arr[n], i;
    printf("Enter the elements:");
    for (i = 0; i < n; i++)
    {
    	scanf("%d", &arr[i]);
	}
    int j, minIndex, temp;

    printf("Original array: \n");
    for (i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    for (i = 0; i < n - 1; i++) {
        minIndex = i;
        for (j = i + 1; j < n; j++) {
            if (arr[j] < arr[minIndex]) {
                minIndex = j;
            }
        }

        if (minIndex != i) {
            temp = arr[i];
            arr[i] = arr[minIndex];
            arr[minIndex] = temp;
        }
    }

    printf("\nSorted array: \n");
    for (i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    printf("\n");

    return 0;
}
